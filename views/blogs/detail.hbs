{{#section 'head'}}
    <style>
        h1 {
            text-align: center;
        }
    </style>
{{/section}}
<article class="container" style="min-height: 500px">
    <h1>{{title}}</h1>
    <section>
        发表时间:{{createdAt}}
    </section>
    <section>
        {{content}}
        <input type="hidden" id="uid" value="{{id}}">
    </section>
    <section>
        <div role="document">
            <form action="" method="POST" class="comment form-horizontal modal-body" id="commentForm" style="background-color: #eee;border-radius: 15px;margin: 10px;">
                <div class="form-group">
                    <label for="comment" class="col-sm-1 control-label">评论</label>
                    <div class="col-sm-11">
                        <textarea name="comment" id="comment" cols="30" rows="10" style="resize: none;width: 90%;"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">提交</button>
                    </div>
                </div>
            </form>
        </div>
    </section>
</article>
{{#section 'customjs'}}
    <script>
        $(document).ready(function () {
            $("#commentForm").attr("action","blogs/addComment/"+$("#uid").val())
        })
    </script>
{{/section}}
